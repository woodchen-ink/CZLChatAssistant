{
  "manifest_version": 3,
  "name": "CZLChat插件",
  "version": "1.1",
  "permissions": ["contextMenus"],
  "description": "CZLChat插件可以帮助你快速地处理文本询问AI内容，免去手动复制的麻烦。可进行询问选中项、写作和生成思维导图等功能。",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
      "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*.czl.net/*"
  ],
  "action": {
      "default_icon": "icon128.png",
      "default_popup": "popup.html"
  }
}
